{
  "testMatch": ["**/tests/unit/**/*.test.js"],
  "testEnvironment": "node",
  "reporters": [
    "default",
    ["jest-html-reporter", {
      "outputPath": "reports/jest/html/index.html",
      "pageTitle": "Jest Unit Test Report"
    }],
    ["allure-jest", {
      "resultsDir": "reports/jest/allure-results"
    }]
  ]
}
